{
  "name": "pact-toolbox-root",
  "version": "0.0.0",
  "description": "A tool to help you build, test and deploy your Pact smart contracts",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint",
    "verify": "turbo verify",
    "precommit": "turbo precommit",
    "postinstall": "husky install",
    "changeset": "changeset",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish"
  },
  "license": "MIT",
  "dependencies": {
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=21.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "pact-toolbox": "workspace:*",
    "tsx": "^4.7.3"
  },
  "pnpm": {
    "overrides": {
      "pact-toolbox": "workspace:*",
      "whatwg-url": "^14.0.0"
    }
  }
}
