{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "lib": ["DOM", "ESNext"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false
  }
}
