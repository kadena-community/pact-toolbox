{
  "name": "create-pact-toolbox-app",
  "version": "0.8.0",
  "description": "Create Pact Toolbox apps with one command",
  "repository": "kadena-community/pact-toolbox",
  "author": "Salama Ashoush <salamaashoush@gmail.com>",
  "license": "MIT",
  "type": "module",
  "private": false,
  "bin": "./bin/main.mjs",
  "files": [
    "./dist/",
    "./templates/"
  ],
  "keywords": [
    "blockchain",
    "kadena",
    "pact",
    "crypto",
    "chainweb",
    "web3"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "./bin/main.mjs",
    "lint": "oxlint --import-plugin --deny-warnings",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "prepack": "pnpm run build",
    "release": "pnpm publish"
  },
  "dependencies": {
    "@pact-toolbox/utils": "workspace:*",
    "citty": "^0.1.6",
    "glob": "^11.0.3",
    "pathe": "^2.0.3"
  },
  "devDependencies": {
    "@pact-toolbox/prettier-config": "workspace:*",
    "@pact-toolbox/tsconfig": "workspace:*",
    "@types/glob": "^8.1.0",
    "@types/node": "^24.0.1",
    "oxlint": "^1.1.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "prettier": "@pact-toolbox/prettier-config"
}
