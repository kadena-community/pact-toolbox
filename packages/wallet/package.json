{
  "name": "@pact-toolbox/wallet",
  "version": "0.0.1",
  "repository": "salamaashoush/pact-toolbox",
  "author": "Salama Ashoush <salamaashoush@gmail.com>",
  "license": "MIT",
  "type": "module",
  "private": false,
  "main": "./src/index.ts",
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
      "dist"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "oxlint --import-plugin  -D all && prettier -c src",
    "lint:fix": "oxlint --import-plugin  -D all --fix && prettier -c src -w",
    "prepack": "pnpm run build",
    "release": "pnpm test && pnpm publish",
    "test:watch": "vitest",
    "test": "vitest run",
    "verify": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@kadena/client": "^1.8.1",
    "@pact-toolbox/client-utils": "workspace:*",
    "@pact-toolbox/coin": "workspace:*"
  },
  "devDependencies": {
    "@pact-toolbox/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "^1.3.0",
    "lint-staged": "^15.2.2",
    "oxlint": "^0.2.8",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  }
}
