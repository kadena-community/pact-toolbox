{
  "name": "@pact-toolbox/tui",
  "version": "0.1.0",
  "description": "Modern terminal user interface components for Pact Toolbox",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ansi-escapes": "^7.0.0",
    "chalk": "^5.4.1",
    "cli-cursor": "^5.0.0",
    "strip-ansi": "^7.1.0",
    "terminal-size": "^4.0.0",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "tui",
    "terminal",
    "cli",
    "interface",
    "monitoring",
    "pact",
    "kadena"
